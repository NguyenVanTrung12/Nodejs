<%- include('../Admin/admin') %>
<div class="container mt-3">
    <h2 style="margin-left: 100px;">Sửa danh mục sản phẩm</h2>
    <form action="/post-edit-sup" method="post"  style="margin-left: 100px;">
        <div class="mb-3 mt-3">
            <label for="email">Tên nhóm</label>
            <input type="text" class="form-control"  placeholder="Enter name" name="name" value="<%= sup.name%>">
            <input type="hidden" name="id" value="<%= sup.id%>">
          </div>
          <div class="mb-3 mt-3">
            <label for="email">Email</label>
            <input type="text" class="form-control"  placeholder="Enter email" name="email" value="<%= sup.email%>">
          </div>
          <div class="mb-3 mt-3">
            <label for="email">Địa chỉ</label>
            <input type="text" class="form-control"  placeholder="Enter address" name="address" value="<%= sup.address%>">
          </div>
          <div class="mb-3 mt-3">
            <label for="email">Điện thoại</label>
            <input type="text" class="form-control"  placeholder="Enter phone_Number" name="phone_Number" value="<%= sup.phone_Number%>">
          </div>
      <button type="submit" class="btn btn-primary">Lưu<i class='fas fa-save' style="margin-left:10px"></i></button>
      <a href="/sup" class="btn btn-primary">Trở lại <i class='fas fa-reply'
        style="margin-left:10px"></i></a>
    </form>
  </div>