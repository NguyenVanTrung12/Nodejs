<%- include('../TrangchuLienket/header') %>



<div class="container">
    <div class="row one">
      
      <% catt.forEach(item=>{ %>
      <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 two">
          <div class="container mt-3">
            
              <div class="card" style="width:300px;">
                  <a href="/chitiet/<%= item.id %>"><img class="card-img-top" src="Img/<%= item.img %>" alt="Card image" style="width:100%;height: 297px;" title="<%= item.name %>"></a>
                  <div class="card-body" style="text-align: center;">
                      <a href="#" style="text-decoration: none; color:black;"><h6 class="card-title" style="font-size:15px ;text-align: center;"><%= item.name %></h6></a>
                      <p class="card-text" style="color:red;text-align: center;"><%= new Intl.NumberFormat('VND',{maximumSidnificantDigits:1}).format(item.sale,) %><sup>đ</sup></p>
                      <p class="card-text"style="text-align: center;"><del><%= new Intl.NumberFormat('VND',{maximumSidnificantDigits:1}).format(item.price,) %><sup>đ</sup></del></p>
                      <a href="" class="btn btn-primary add">Add to cart <span><i
                                  class="fas fa-cart-plus"></i></span></a>
                  </div>
              </div>
          </div>
      </div>
      <%}) %>
  </div>
  </div>
  <%- include('../TrangchuLienket/footer') %>