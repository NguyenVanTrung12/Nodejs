<!DOCTYPE html>
<html lang="en">
<head>
  <title>Đăng nhập admin</title>
  <link type='/dist/img/t.jpg' href='/dist/img/c.png' rel='icon'  />
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<div class="container">
    <h2 style="margin-left: 100px;">Đăng nhập</h2>
    <% if(typeof err!='undefined') { %>
      <% err.forEach((item)=>{ %>
        <h4><%=item.message %></h4>
      <%}) %>
    <%} %>
    <form action="/login" method="post"  style="margin-left: 100px;" >
      
      <div class="mb-3 mt-3">
        <label for="email">Email</label>
        <input type="text" class="form-control"  placeholder="Enter email" name="email" >
        
      </div>
      <div class="mb-3 mt-3">
        <label for="password">Mật khẩu</label>
        <input type="password" class="form-control"  placeholder="Enter password" name="password" >
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/dangky" class="btn btn-primary">Đăng ký</a>
      <!-- <a href="/pro" class="btn btn-primary">Trở lại</a> -->
    </form>
  </div>
  </body>